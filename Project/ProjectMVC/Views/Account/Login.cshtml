@model LibraryWebApplication.Controllers.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<style>
    .login-container {
        background-color: #1a1a1a;
        max-width: 400px;
        margin: 40px auto;
        padding: 30px 40px;
        border-radius: 10px;
        border: 2px solid #333;
        box-shadow: 0 0 15px #222;
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-title {
        text-align: center;
        margin-bottom: 25px;
        font-weight: 700;
        font-size: 1.8rem;
        color: #fff;
        letter-spacing: 1.5px;
    }

    /* Make labels above inputs */
    form .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    form label {
        font-weight: 600;
        font-size: 1rem;
        color: #ccc;
        margin-bottom: 6px;
    }

    form input[type="text"],
    form input[type="password"],
    form input[type="email"] {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid #555;
        background-color: #222;
        color: #eee;
        font-size: 1rem;
        transition: border-color 0.3s ease;
        box-sizing: border-box;
    }

    form input[type="text"]:focus,
    form input[type="password"]:focus,
    form input[type="email"]:focus {
        border-color: #1e90ff;
        outline: none;
        background-color: #1a1a40;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
    }

    .form-check-label {
        color: #ccc;
        font-size: 0.9rem;
    }

    .btn {
        display: block;
        width: 100%;
        background: #1e90ff;
        color: white;
        padding: 10px 0;
        border: none;
        border-radius: 7px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background: #1c7de1;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 4px;
        color: #ff4d4d;
    }
input[type="text"],
input[type="password"],
input[type="email"] {
    width: 100%;
    padding: 10px 12px;
    border-radius: 6px;
    border: 1px solid #555;
    background-color: #222;
    color: #eee; /* visible text color */
    font-size: 1rem;
    transition: border-color 0.3s ease, background-color 0.3s ease;
    box-sizing: border-box;
}

/* Focus state */
input[type="text"]:focus,
input[type="password"]:focus,
input[type="email"]:focus {
    border-color: #1e90ff;
    outline: none;
    background-color: #1a1a40;
    color: #eee; /* keep text visible on focus */
}

/* Disabled state */
input[type="text"]:disabled,
input[type="password"]:disabled,
input[type="email"]:disabled {
    background-color: #333;
    color: #bbb; /* lighter color but visible */
    cursor: not-allowed;
}

/* Hover state */
input[type="text"]:hover:not(:disabled),
input[type="password"]:hover:not(:disabled),
input[type="email"]:hover:not(:disabled) {
    border-color: #66a3ff;
    color: #eee; /* keep text visible on hover */
}
    .auth-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #1e90ff;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .auth-link:hover {
        color: #1c7de1;
        text-decoration: underline;
    }
</style>

<h2 class="login-title">Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-container" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-check">
        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn">Login</button>
}

<a class="auth-link" asp-controller="Account" asp-action="Register">Don't have an account? Register</a>
